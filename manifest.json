{
  "manifest_version": 3,
  "name": "Upwork Highlighter",
  "description": "Highlight listed keywords on the current page",
  "version": "0.3",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Highlight keywords"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}